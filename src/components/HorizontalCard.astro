---
export interface Props {
  title: string;
  subtitle?: string;
  img: string;
  desc: string;
  badge?: string;
  tags?: string[];
  url?: string;
  target?: string;
}
const { title, img, desc, url, badge, tags, target = "_blank", subtitle } = Astro.props;
import { Image } from "astro:assets";
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url !== undefined ? url : undefined} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={120}
            height={120}
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        {subtitle && <h2 class="text-md font-medium text-grey-600">{subtitle}</h2>}
        <p class="py-1 text-1xl text-gray-600">{desc}</p><div class="card-actions justify-end">
          {tags && tags.map((tag) => <p class="badge badge-outline">{tag}</p>)}
        </div>
      </div>
    </div>
  </a>
</div>
